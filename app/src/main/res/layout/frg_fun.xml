<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/play_ll_person_info"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:background="@drawable/play_bt_bg"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/frg_pla_fun_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/play_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/frg_pla_fun_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 娱乐"
                android:textColor="@color/color_ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/frg_pla_fun_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" lalal"
                android:textColor="@color/color_ffffff"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/play_recycler_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/play_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_ll_person_info"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/play_bt_bg"
        android:padding="10dp"
        android:text="映客票：123123"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_tv_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">

        <Chronometer
            android:id="@+id/play_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format="%s"
            android:gravity="center"
            android:textColor="@color/color_ffffff" />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/play_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2017/08/21"
            android:textColor="@color/color_ffffff" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/play_recycler_ver"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/play_fun_iv_pub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/room_down_publicchat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/play_fun_iv_gift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/play_fun_iv_pub"
            android:background="@mipmap/room_down_gift" />

        <ImageView
            android:id="@+id/play_fun_iv_music"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/play_fun_iv_gift"
            android:background="@mipmap/room_down_music" />

        <ImageView
            android:id="@+id/play_fun_iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/play_fun_iv_music"
            android:background="@mipmap/shortvideo_button_close" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/play_fun_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff"
        android:padding="-10dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/play_fun_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="在此输入你要说的话" />

        <Button
            android:id="@+id/play_fun_bt"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/play_message_tv_bg"
            android:text="发送"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_fun_ll"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/pre"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yzz.sevenp.heart.HeartLayout
                android:id="@+id/heart_layout"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="50dip"
                android:layout_marginRight="30dip" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>